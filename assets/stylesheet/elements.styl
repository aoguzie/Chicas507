.shadow
    -moz-box-shadow    inset 0 0 10px #000000
    -webkit-box-shadow inset 0 0 10px #000000
    box-shadow         inset 0 0 10px #000000

.division
    position relative
    width 95%
    margin 2rem 2.5% 4rem
    .flecha-down
        width 100%
        position absolute
        left 0%
        .flecha-down2
            margin-left calc(50% - 5px)
    &.-small
        margin 0 auto 5rem
        max-width 25%

.flecha-down,
.flecha-down2
    width 0px
    height 0px
    border-left 5px solid transparent
    border-right 5px solid transparent

    font-size 0px
    line-height 0px
.flecha-down
    border-top 5px solid letras
.flecha-down2
    border-top 5px solid main_color

.container
    @media only screen and (min-device-width: 1200px)
        width 1280px

.row
    margin 0
    max-width: 1280px
    padding 0

ul,
li,
div,
figure,
article,
section,
    list-style none
    margin 0
    padding 0

img
    max-width 100%

h1,
h2,
h3,
h4,
h5,
h6,
p,
span,
em,
q,
a,
small,
label,
q,
blockquote
    line-height 1.5
    font-family Droid

h2
    text-transform uppercase

h2, h3
    color letras
    text-align center
a
    color cruel_love
    text-decoration none
    transition all .5s
    &:hover
        text-decoration none
        color penis
p
    color letras
    line-height 1.5

small
    color letras
    font-size 12px
    font-size 1.5rem

span
    color letras
    font-size 16px
    font-size 1.6rem

*::-webkit-input-placeholder
    /* Google Chrome y Safari */
    color letras
    font-family Droid
*:-moz-placeholder
    /* Firefox anterior a 19 */
    color letras
    font-family Droid
*::-moz-placeholder
    /* Firefox 19 y superior */
    color letras
    font-family Droid
*:-ms-input-placeholder
    /* Internet Explorer 10 y superior */
    color letras
    font-family Droid