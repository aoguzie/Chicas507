.prev-next-wrapper
	around_centered_flex()
	&.-next
		text-align right
	> .circle-picture
		border-radius 50%
		height 8rem
		margin: 0 1rem;
		overflow hidden
		width 8rem
		> .photo
			border-radius 50%
			width 100%
			height 100%
	> .fa
		color rgba(black, .2)
		font-size 3rem
	> .info
		> p
			margin 0
			line-height 1.2
		> .name
			font-size 2rem
		> .zone
			font-size 1.3rem
			color cruel_love