img, video
	max-width 100%

.re_admin
	margin-bottom 2rem

.off
	display none !important

.active
	display block

.active_flex
	display block

.anuncio
	width 95%
	border 1px solid letras

.panel-o
	background main_color

.fotos
	padding 0 5rem
	margin-bottom 5%

.fotos-container
	border 1px solid letras
	padding 1rem
	.foto
		padding 0 5rem
		margin 1% auto
		height 35rem
	img
		margin 0
		vertical-align top
		height 100%
		width 100%

.button a, .button input[type=submit]
	display block
	width 100%
	border 1px solid letras
	text-decoration none
	color letras
	padding .5rem
	transition all 1s
	font-family Droid
	margin: 2% auto;
	&:hover
		border 1px solid main_color
		background letras
		color main_color

label
	color letras
	text-transform uppercase
	padding 0
	margin 5% auto
	font-weight normal

form
	div:first-child
		label
			margin 2% auto

input, select
	padding .5rem
	text-transform capitalize

input,
select,
textarea
	border 1px solid letras
	color letras
	font-weight bold
	&:active,
	&:focus
		outline 0

.features_head, .servicios_head
	h4
		font-size 2.7rem
	p
		font-size 2.2rem

.features, .servicios
	padding 0

.servicios
	around_flex()
	align-items flex-start
	align-content flex-start

#datos_anuncio
	padding 0
	form, form .bio
		horizontal_centered_flex()
	@media only screen and (max-device-width: 993px)
		.col-xs-12
			padding 0
	@media only screen and (min-device-width: 993px)
		&.-border-right
			border-right 1px solid letras

.separador
	border-bottom 1px solid letras
	margin 2rem 0

.enviar_anuncio
	border-top 1px solid letras
	margin-top 5%
	padding 2rem

#enviar_anuncio
	padding 1rem

.video_model, .fotos_model
	label
		margin 2% auto
	input
		margin 2% auto

	.button
		margin-top 1%

#bio
	max-height 300px
	height 300px
	max-width 91.66666667%
	width 91.66666667%


.bio
	label
		margin-bottom 2%

#presentation
	max-height 150px
	height 150px
	max-width 91.66666667%
	width 91.66666667%

.marco_pass
	border 1px solid letras
	margin-top 2rem

.contra
	margin-bottom 2rem

.pago
	margin-bottom 2rem

.anuncio-admin
	padding 1rem

.admin-header
	margin 5% auto 2%

#modelo-cuadro
	border 1px solid letras
	margin-bottom 2rem
	padding 1rem
	@media only screen and (min-device-width: 1023px)
		margin-left 5.5%
	>	.col-md-4
		horizontal_centered_flex()
		align-items flex-start
		align-content flex-start
	img
		@media only screen and (min-device-width: 1023px)
			max-height 15rem

.info-model
	border-right 1px solid letras

.model-date, .status
	font-family Droid
	font-size 2rem
	font-weight 300
	color letras
	span
		font-family Droid
		color cruel_love

.options
	margin-top 2%
	border-top 1px solid letras

.action
	display inline-block
	padding .5rem 1rem
	border-right 1px solid letras
	a
		color letras
		text-decoration none
		transition all 1s
		&:hover
			color rgba(letras, .6)

.article-container
	input
		margin 1rem auto
		padding 1rem
	textarea
		max-height 25rem
		min-height 25rem
		max-width 100%
		min-width 100%
		padding 1rem

.button-article
	transition all .5s
	&:hover
		background letras
		color main_color
.listado
	full_centered_flex()

@media only screen and (max-device-width: 990px)

	.fotos-container
		padding 1rem
		.foto
			margin 2%
			margin-left 5.65%
			padding 0

	.info-model, #datos_anuncio
		border none

	.button, .panel, .panel-o
		float none

	.listado
		padding 2.3rem

	#modelo-cuadro
		margin-left 0

	.admin-header
		margin 2% auto

	.main_wrapper #sli_modelos #min_modelos
		display none

	#container #registro .formulario
		margin-left 5%;
@media only screen and (min-device-width: 320px) and (max-device-width: 540px)
	.fotos-container
		padding 0 5rem
		.foto
			padding 0 5rem

@media only screen and (min-device-width: 990px)
	#container #registro .formulario
		width: 50%;
		margin-left 25%;