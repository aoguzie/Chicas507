.input-container
	display_flex()
	justify-content space-between
	margin-bottom 2rem
	&.-center
		justify-content center
	> .subtitle
		color afternoon_delight
		width 100%
		&.-midsize
			width 50%
	> .input
		padding 1rem
		margin 1rem 0
		width 100%
		&:hover,
		&:focus
			outline none
			border 1px solid cruel_love
		@media only screen and (min-device-width: 993px)
			width 48.5%
			&.-full
				width 100%
	> .file
		font-size 1.15rem
		width 100%
		@media only screen and (min-device-width: 993px)
			width 32%
		> .photo
			background wild_sand
			overflow hidden
			padding 1rem
			text-align center
			transition all .5s
			width 100%
			&:hover,
			&:focus
				background black
				color main_color
		> label
			color orgasm
			font-size 1.25rem
			padding 0
	> .textarea
		height 15rem
		padding 1rem
		resize none
		width 100%