fondo   = #F5F6CE
main_color  = #610B21
letrah2 = white
gris 	= #444

@import url('http://fonts.googleapis.com/css?family=Overlock:400,700,400italic,700italic|Poiret One')
@import url('http://fonts.googleapis.com/css?family=Overlock:400,700,400italic,700italic|Dancing Script')    
@import url('http://fonts.googleapis.com/css?family=Overlock:400,700,400italic,700italic|Open Sans Condensed') 
@import url('http://fonts.googleapis.com/css?family=Overlock:400,700,400italic,700italic|Athiti')

@font-face 
  font-family 'FontAwesome'
  src url('../fonts/fontawesome-webfont.eot')
  src url('../fonts/fontawesome-webfont.eot?#iefix') format('embedded-opentype'), url('../fonts/fontawesome-webfont.woff') format('woff'), url('../fonts/fontawesome-webfont.ttf') format('truetype'), url('../fonts/fontawesome-webfont.svg#fontawesomeregular') format('svg');
  font-weight normal
  font-style normal
  
html 
    width 100%
    height 100%
    margin 0 auto
    padding 0 
    background fondo
    max-width 1368px
body
    width 100%
    height 100%
    margin 0 auto 
    padding 0 
    max-width 1368px
    .main_wrapper
        width 100%
        background fondo
        .shadow
            -moz-box-shadow    inset 0 0 10px #000000
            -webkit-box-shadow inset 0 0 10px #000000
            box-shadow         inset 0 0 10px #000000
        .division
            width 100%
            height 3px
        .flecha-down 
            width 0px
            height 0px
            border-left 5px solid transparent 
            border-right 5px solid transparent 
            border-top 5px solid main_color
            font-size 0px
            line-height 0px
            margin-left 0%
        .flecha-down2
            width 0px
            height 0px
            border-left 5px solid transparent 
            border-right 5px solid transparent 
            border-top 5px solid #F5F6CE
            font-size 0px
            line-height 0px
	        ul
	            list-style none
	            margin 0
	            padding 0
	        li
	            list-style none
	            margin 0
	            padding 0
	        h2
	            font-family Dancing Script
	            color black
	            font-weight bold
	            text-align center
	        h3               
	            font-family Poiret One
	            color #29220A
	            font-weight bold
	            text-align center
	            &::before
	                content "- "
	            &::after
	                content " -"  
	        a
	            text-decoration none
	            font-family Poiret One
	            font-weight bold
	            text-shadow 2px 1px 1px black
	            color white  
         header
            width 100%
            .main_header
                position fixed
                width 100%
                height 65px
                z-index 1001
                background fondo
                .contenedor
                    position relative
                    width 100%
                    height 65px
                    max-width 1368px
                    .barra-header
                        width 40%
                        margin-left 0%
                        .logo-header
                            display block
                            width 100%
                            margin 0 auto
                            margin-top 9%
                            margin-left 15%
                            img
                                width 70%
                                height 40px
                                margin-left 35%
                    #resp-menu
                        display none
                    #resp-menu:checked ~ .menu-header
                            transform translateX(0%)
                    label
                        position absolute
                        top 25%
                        right 15%
                        cursor pointer
                        color main_color
                        font-size 2em  
                    .fa fa-bars::before
                        font-family FontAwesome
                        content "\f0c9"
                    .menu-header
                        position absolute
                        width 100%
                        top 65px
                        height 130px
                        background rgba(fondo, 0.8)
                        transform translateX(-100%)
                        transition all 0.5s
                        .submenu
                            padding 5px
                            background fondo
                            &:hover
                                transition all 0.5s
                                background main_color
                                a
                                    border none
                                    background main_color
                                    color white
                        .barra-menu
                            width 100%
                            display flex
                            flex-direction column
                            a
                                font-weight bold
                                font-size 0.9em
                                font-family Athiti
                                text-shadow none
                                color main_color
                                text-align left
                                &:active
                                    color gris
                                &:hover
                                    border-bottom 1px solid main_color
                                    transition all 0.5s
                                .flecha-down
                                    position absolute
                                    right 5%
                            .opcion
                                width 100%
                            .dropdown1
                                width 100%  
                            .dropdown2
                                width 100%  
                            .dropdown3
                                width 100%  
        .container
        	display block
        	width 95%
        	height 100%
        	margin 0 auto
        	margin-top 20%
	        .division
	            position relative
	            .flecha-down
	                position absolute
	                width 100%
	                left 0%
	                .flecha-down2
	                    margin-left 50%
	        .about_us
	        	position relative
	        	width 100%
	        	height 100%
	        	.mensaje
	        		width 100%
		        	h2
		        		font-size 2.3em
		        	h3
		        		font-size 1.5em
	        	.sobre_chicas
	        		p
	        			display block
	        			width 95%
	        			margin 5% auto
	        			text-align justify
	        			font-family Poiret One
	        			font-size 1em
	        			font-weight bold
	    footer
	        height 150px
	        width 100%
	        background rgba(black, 0.9)
	        border 2px solid gris
	        text-align center
	        font-family Poiret One
	        font-size 0.9em
	        p
	            display block
	            margin 0 auto
	            width 50%
	            color white
	            line-height 20px
	            span
	                margin-top 0%
	                img
	                    width 100%
	                    height 30px
	                    display block
	        .p
	            width 100%
	            margin-top 5%	        			
        	
@media screen and (min-width: 768px)

    #head
        .main_header
            .contenedor
                .barra-header
                    margin-top 0.8%
                    margin-left 0%
                    .logo-header
                        margin-top 0%
                        margin-left 15%
                        img
                            width 30%
                            height 40px
                            margin-left 0%
                #resp-menu
                    display none
                label
                    display none
                .menu-header
                    width 70%
                    top 20%
                    right 2%
                    background none
                    transform translateX(0%)
                    .dropdown-menu
                        margin 0 auto
                        margin-top -78px
                    .barra-menu
                        width 100%
                        display block
                        a
                            font-size 1em
                            &:active
                                color gris
                            &:hover
                                border-bottom 1px solid main_color
                            .flecha-down
                                position relative
                                left 1%
                        .dropdown1 
                            width 14%
                            display inline-block
                            vertical-align top 
                            text-align center 
                        .dropdown2 
                            width 14%
                            display inline-block
                            vertical-align top 
                            text-align center 
                        .dropdown3 
                            width 14%
                            display inline-block
                            vertical-align top 
                            text-align center 
                        .opcion
                            width 14%
                            display inline-block
                            vertical-align top 
                            text-align center
    #container
    	margin-top 55px
	    #about_us
	    	margin-top 5%    
    		h2
    	        font-size 3em
            h3
                font-size 1.8em      
	        #sobre_chicas
	        	p
	        		margin 3.3% auto
		        	font-size 1.3em
	#foot
	    height 120px
	    font-size 1.1em
	    p
	        width 100%
	        span
	            display inline-block
	            padding 0px 2em
	            img
	                width 100%
	    .p
	        margin-top 2%