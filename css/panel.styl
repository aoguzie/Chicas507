fondo   = #F5F6CE
main_color  = #610B21
letrah2 = white
gris 	= #444

@import url('http://fonts.googleapis.com/css?family=Overlock:400,700,400italic,700italic|Poiret One')
@import url('http://fonts.googleapis.com/css?family=Overlock:400,700,400italic,700italic|Dancing Script')    
@import url('http://fonts.googleapis.com/css?family=Overlock:400,700,400italic,700italic|Open Sans Condensed') 
@import url('http://fonts.googleapis.com/css?family=Overlock:400,700,400italic,700italic|Athiti')

@font-face 
  font-family 'FontAwesome'
  src url('../fonts/fontawesome-webfont.eot')
  src url('../fonts/fontawesome-webfont.eot?#iefix') format('embedded-opentype'), url('../fonts/fontawesome-webfont.woff') format('woff'), url('../fonts/fontawesome-webfont.ttf') format('truetype'), url('../fonts/fontawesome-webfont.svg#fontawesomeregular') format('svg');
  font-weight normal
  font-style normal
  
html 
	width 100%
	height 100%
	margin 0 auto
	padding 0 
	background fondo
body
    width 100%
    height 100%
    margin 0 auto
    padding 0 
    max-width 1368px
    .main_wrapper
        width 100%
        height 100%
        background fondo
        .shadow
            -moz-box-shadow    inset 0 0 10px #000000
            -webkit-box-shadow inset 0 0 10px #000000
            box-shadow         inset 0 0 10px #000000
        .division
            width 100%
            height 3px
        .flecha-down 
            width 0px
            height 0px
            border-left 5px solid transparent 
            border-right 5px solid transparent 
            border-top 5px solid main_color
            font-size 0px
            line-height 0px
            margin-left 0%
        .flecha-down2
            width 0px
            height 0px
            border-left 5px solid transparent 
            border-right 5px solid transparent 
            border-top 5px solid #F5F6CE
            font-size 0px
            line-height 0px
	        ul
	            list-style none
	            margin 0
	            padding 0
	        li
	            list-style none
	            margin 0
	            padding 0
	        h2
	            font-family Dancing Script
	            color black
	            font-weight bold
	            text-align center
	        h3               
	            font-family Poiret One
	            color #29220A
	            font-weight bold
	            text-align center
            h4   
                font-size 1.4em            
                font-family Poiret One
                color #29220A
                font-weight bold  
	        a
	            text-decoration none
	            font-family Poiret One
	            font-weight bold
	            text-shadow 2px 1px 1px black
	            color white
            blockquote
                color black
                font-size 1.4em
                font-family Dancing Script
                font-weight bold
                text-align center
                border none
                border-bottom 1px solid main_color   
        header
            width 100%
            .main_header
                position fixed
                width 100%
                z-index 1001
                background fondo
                .contenedor
                    position relative
                    width 100%
                    height 65px
                    max-width 1368px
                    .barra-header
                        width 40%
                        margin-left 0%
                        .logo-header
                            display block
                            width 100%
                            margin 0 auto
                            margin-top 9%
                            margin-left 15%
                            img
                                width 70%
                                height 40px
                                margin-left 35%
                    #resp-menu
                        display none
                    #resp-menu:checked ~ .menu-header
                            transform translateX(0%)
                    label
                        position absolute
                        top 25%
                        right 15%
                        cursor pointer
                        color main_color
                        font-size 2em  
                    .fa fa-bars::before
                        font-family FontAwesome
                        content "\f0c9"
                    .menu-header
                        position absolute
                        width 100%
                        top 65px
                        height 130px
                        background rgba(fondo, 0.8)
                        transform translateX(-100%)
                        transition all 0.5s
                        .submenu
                            padding 5px
                            background fondo
                            &:hover
                                transition all 0.5s
                                background main_color
                                a
                                    border none
                                    background main_color
                                    color white
                        .barra-menu
                            width 100%
                            display flex
                            flex-direction column
                            a
                                font-weight bold
                                font-size 0.9em
                                font-family Athiti
                                text-shadow none
                                color main_color
                                text-align left
                                &:active
                                    color gris
                                &:hover
                                    border-bottom 1px solid main_color
                                    transition all 0.5s
                                .flecha-down
                                    position absolute
                                    right 5%
                            .opcion
                                width 100%
                            .dropdown1
                                width 100%  
                            .dropdown2
                                width 100%  
                            .dropdown3
                                width 100%  
        .container
        	display inline-block
        	width 98%
        	height 100%
        	margin-left 1%
        	margin-top 65px  
    	    .division
    	        position relative
    	        .flecha-down
    	            position absolute
    	            width 100%
    	            left 0%
    	            .flecha-down2
    	                margin-left 50%
            .titulo 
                position relative
                width 100% 
                .mensaje
                    width 100%
                    h2
                        font-size 1.3em
                    h3
                        margin-top 1%
                        font-size 1em
                        &::before
                            content "- "
                        &::after
                            content " -"  
            .prepago
                display inline-block
                margin 3% auto
                background fondo 
                width 100%
                height 100%
                .panel
                    margin 0 auto
                    width 100%
                    height 100%
                    display inline-block
                    background fondo 
                    .modelo
                        display inline-block
                        margin 5% auto
                        width 100%
                        height 70%
                        img     
                            width 100%
                            height 100%
                            border 1px solid main_color
                        h3
                            width 80%
                            margin 2% auto
                            font-size 1em
                            .fa-phone
                                color main_color
                    article
                        margin 2% auto
                        border-top 1px solid main_color
                    .datos
                        margin 2% auto
                        width 100%
                        .val-50
                            background-position 0 0
                    .dat
                        margin 2% auto
                        .row
                            font-family Athiti
                            .col-lg-3, .col-lg-9
                                    font-weight bold
                            .col-lg-3
                                width 40%
                                font-size 0.9em
                                color main_color
                                strong
                                    margin-left 0%
                            .col-lg-9
                                width 60%
                                font-size 0.8em
                            .valoracion
                                width 100px
                                height 21px
                                display block
                                background url(../imagenes/estrellas.png) 0 0 no-repeat
                    .bio 
                        margin 5% auto
                        p               
                            font-family Athiti
                            text-align justify
                            font-size 1.2em 
                    .servicios
                        margin 5% auto
                        width 100%
                        form
                            width 95%
                            margin-left 2.5%
                            label
                                display inline block
                                cursor pointer
                                width 120px
                                margin-left 3%
                                font-family Athiti
                                font-size 0.8em
                                font-weight bold
                                text-align justify 
                                
                                &::before
                                    content " | "
                                input
                                    display none          
                        a 
                            color black
                            font-family Dancing Script
                            font-size 1.2em
                            text-shadow none
                    .fotos
                        width 100%
                        .fotog
                            position fixed
                            width 100%
                            height 100%
                            top 0%
                            left 0%
                            background black
                            opacity 0.3
                            cursor pointer
                        .marco
                            position fixed
                            width 80%
                            height 70%
                            top 15%
                            left 10%
                            border 1px solid main_color
                            border-radius 10px
                            .foto
                                width 100%
                                height 100%
                                border 20px solid white 
                                border-radius 10px                                
                                img
                                    display block 
                                    width 100%
                                    height 100%
                                    border 1px solid main_color                           
                        .mini_fotos
                            margin 5% auto
                            width 100%
                            .picture
                                margin 1% auto
                                margin-left 0.5%
                                width 32%
                                display inline-block
                                img 
                                    width 100%
                                    height 110px
                    .comentarios
                        width 90%
                        height 280px
                        margin auto
                        overflow scroll
                        p
                            font-family Athiti
                            font-size 1.2em
                            text-align justify
                        .coment
                            width 100%
                            height 200px
                            background rgba(black, 0.1)
                            border 1px solid rgba(main_color, 0.4)
                            form
                                margin 30px auto
                                width 80%
                                height 70%
                                input
                                    width 100%
                                textarea
                                    margin-top 1%
                                    width 100%
                                #boton
                                    margin-top 0%
                                    background main_color
                                    color fondo
                                    &:hover
                                        color main_color
                                        background fondo
                                        transition all 0.5s
                        .comenta
                            width 100%
                            height 120px
                            margin 2% auto
                            background rgba(black, 0.1)
                            border 1px solid rgba(main_color, 0.4)
                            span
                                display block
                                margin 1% auto
                                width 90%
                                font-family Poiret One 
                                font-weight bold
                                color rgba(black, 1)
                            #respuesta
                                text-align center
                                color main_color
                            #fecha
                                display block 
                                text-align justify
                                margin-left -6%
                                color rgba(main_color, 0.6)                         
            footer
                height 150px
                width 100%
                background rgba(black, 0.9)
                border 2px solid gris
                text-align center
                font-family Poiret One
                font-size 0.9em
                p
                    display block
                    margin 0 auto
                    width 50%
                    color white
                    line-height 20px
                    span
                        margin-top 0%
                        img
                            width 100%
                            height 30px
                            display block
                .p
                    width 100%
                    margin 0 auto
                    margin-top 5%        			
        	
@media screen and (min-width: 768px)

    #head
        .main_header
            .contenedor
                .barra-header
                    margin-top 0.8%
                    margin-left 0%
                    .logo-header
                        margin-top 0%
                        margin-left 15%
                        img
                            width 30%
                            height 40px
                            margin-left 0%
                #resp-menu
                    display none
                label
                    display none
                .menu-header
                    width 70%
                    top 20%
                    right 2%
                    background none
                    transform translateX(0%)
                    .dropdown-menu
                        margin 0 auto
                        margin-top -78px
                    .barra-menu
                        width 100%
                        display block
                        a
                            font-size 1em
                            &:active
                                color gris
                            &:hover
                                border-bottom 1px solid main_color
                            .flecha-down
                                position relative
                                left 1%
                        .dropdown1 
                            width 14%
                            display inline-block
                            vertical-align top 
                            text-align center 
                        .dropdown2 
                            width 14%
                            display inline-block
                            vertical-align top 
                            text-align center 
                        .dropdown3 
                            width 14%
                            display inline-block
                            vertical-align top 
                            text-align center 
                        .opcion
                            width 14%
                            display inline-block
                            vertical-align top 
                            text-align center
    #container
        position relative 
        height  1950px 
        max-height 1950px    
        .mensaje
            h2
                font-size 1.7em
            h3
                font-size 1.3em
        #prepago
            margin 0
            height 1850px 
            #panel
                vertical-align top
                width 49.5%
                height 40%
                .modelo
                    margin 2% auto
                    height 100%
                    img    
                        height 100%
                    h3
                        font-size 1.4em
                    .col-lg-3
                        font-size 1em
                    .col-lg-9
                        font-size 1em
                .bio
                    h4
                        font-size 1.7em
                    p               
                        font-size 1.4em 
                .servicios
                    h4
                        font-size 1.7em      
                    a 
                        font-size 1.4em
                .tarifas
                    h4
                        font-size 1.7em
        #foot
            position absolute
            width 102%
            left -1%
            bottom 0%
            height 120px
            font-size 1.1em
            p
                width 100%
                span
                    display inline-block
                    padding 0px 2em
                    img
                        width 100%
            .p
                margin-top 2%